{
  "scripts": {
    "install": "npm-run-all --serial install:*",
    "install:main": "cd main && npm i",
    "install:vue-app": "cd vue-app && npm i",
    "install:react-app": "cd react-app && npm i",
    "start": "npm-run-all --parallel start:*",
    "start:react-app": "cd react-app && npm start",
    "start:vue-app": "cd vue-app && npm start",
    "start:main": "cd main && npm start"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
